<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

  <ImageView
      android:id="@+id/pasta_image_view"
      android:layout_width="71dp"
      android:layout_height="104dp"
      tools:src="@tools:sample/avatars" />

  <LinearLayout
      android:layout_width="175dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:padding="5dp">

    <TextView
        android:id="@+id/pasta_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem[3]" />

    <TextView
        android:id="@+id/pasta_ingredients_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem[4]" />

    <TextView
        android:id="@+id/pasta_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem[2]" />

  </LinearLayout>

  <Button
      android:id="@+id/add_to_cart_button"
      android:layout_width="67dp"
      android:layout_height="105dp"
      android:layout_weight="1"
      android:text="@string/add_to_cart" />

  <ImageButton
      android:id="@+id/add_to_favourites_button"
      android:layout_width="wrap_content"
      android:layout_height="105dp"
      android:layout_weight="0"
      app:srcCompat="@drawable/favourites_border"
      tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>